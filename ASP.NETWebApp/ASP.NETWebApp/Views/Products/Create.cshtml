
@{
    ViewBag.Title = "Create";
}


<h2>Create Product</h2> <br />

<form action="/Products/Create" method="POST">

    <div class="form-row">
        <!-- PRODUCT ID = IDENTITY(1,1) In Db-->

        <!-- Product Name-->
        <div class="form-group col-md-6">
            <label for="ProductName">Product Name</label>
            <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="Product Name">
        </div>
        <!-- Price-->
        <div class="form-group col-md-6">
            <label for="Price">Price</label>
            <input type="number" class="form-control" id="Price" name="Price" placeholder="Price">
        </div>
    </div>

    <div class="form-row">
        <!-- Date of Purchase-->
        <div class="form-group col-md-6">
            <label for="DateOfPurchase">Date of Purchase</label>
            <input type="date" class="form-control" id="DateOfPurchase" name="DateOfPurchase" placeholder="Date of Purchase">
        </div>
        <!-- Availability Status: STATIC_DROPDOWN-->
        <div class="form-group col-md-6">
            <label for="AvailabilityStatus">Availability Status</label>
            <!-- <input type="text" class="form-control" id="AvailabilityStatus" name="AvailabilityStatus" placeholder="Availability Status">-->
            <select class="form-control" id="AvailabilityStatus" name="AvailabilityStatus">
                <option value="">Please Select</option>
                <option value="InStock">In Stock</option>
                <option value="OutOfStock">Out of Stock</option>
            </select>
        </div>
    </div>

    <div class="form-row">
        <!-- CategoryId: NAME_DYNAMIC_DROPDOWN-->
        <div class="form-group col-md-6">
            <label for="CategoryId">Category</label>
            <select class="form-control" id="CategoryId" name="CategoryId">
                <option value="">Please Select</option>
                @foreach (var catg in ViewBag.Categories)
                {
                    <option value="@catg.CategoryId">@catg.CategoryName</option>
                }
            </select>
            <!--<input type="text" class="form-control" id="CategoryID" name="CategoryID" placeholder="Category ID">-->
        </div>

        <!-- BrandId:NAME_DYANMIC_DROPDOWN -->
        <div class="form-group col-md-6">
            <label for="BrandID">Brand</label>
            <select class="form-control" id="BrandId" name="BrandId">
                <option>Please Select</option>
                @foreach (var brand in ViewBag.Brands)
                {
                    <option value="@brand.BrandId">@brand.BrandName</option>
                }
            </select>
            <!--<input type="text" class="form-control" id="BrandID" name="BrandID" placeholder="Brand ID">-->
        </div>
    </div>

    <!-- Active ? CHECKBOX-->
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="Active" name="Active" value="true">
            <label class="form-check-label" for="Active">Active</label>
        </div>
    </div>

    <!-- Create |Cancel Button-->
    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-danger" href="@Url.Action("Index", "Products")">Cancel</a>
</form>

