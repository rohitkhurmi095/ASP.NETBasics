@model List<ASP.NETWebApp.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

@*Add Product: /Products/Create*@
<a class="btn btn-md bg-success text-white" href="@Url.Action("Create","Products")">Create</a>

@*SEARCH bar: SEARCH PRODUCT BY NAME*@
<form class="form-inline mt-2" action="/Products/Index">
    <input type="search" class="form-control" id="search" name="search" value="@ViewBag.Search"  placeholder="Search(by name)...">

    <!-- button -->
    <button type="submit" class="btn btn-primary">Go</button>
</form>


<table class="table mt-2">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Date Of Purchase</th>
            <th>Availability Status</th>
            <th>Category Id</th>
            <th>Brand Id</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.Price.Value.ToString("C")</td>
            <td>@item.DateOfPurchase.Value.ToString("dd/MM/yyyy")</td>
            <td>@item.AvailabilityStatus</td>
            <td>@item.CategoryId</td>
            <td>@item.BrandId</td>
            <td>@item.Active</td>

            <!-- DETAILS|Edit|Delete Buttons-->
            <td><a class="btn btn-light text-primary" href="/Products/Details/@item.ProductId">Details</a></td>
            <td><a class="btn btn-primary text-white" href="/Products/Edit/@item.ProductId">Edit</a></td>
            <td><a class="btn btn-danger text-white" href="/Products/Delete/@item.ProductId">Delete</a></td>
        </tr>
    }
    </tbody>
</table>
